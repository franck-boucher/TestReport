{
  "name": "test-report",
  "description": "Small app that generates test reports of newly developed features",
  "version": "2.0.0",
  "private": true,
  "author": {
    "name": "Franck Boucher",
    "email": "boucher.fk@gmail.com",
    "url": "https://fboucher.com"
  },
  "dependencies": {
    "electron-store": "^2.0.0",
    "file-saver": "^2.0.2",
    "formik": "^2.0.7",
    "immutable": "^4.0.0-rc.12",
    "jszip": "^3.2.2",
    "pdfmake": "^0.1.59",
    "react": "^16.8.2",
    "react-beautiful-dnd": "^10.1.1",
    "react-dom": "^16.8.2",
    "react-hotkeys": "^1.1.4",
    "react-scripts": "2.1.5",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^0.88.2"
  },
  "build": {
    "extends": null,
    "appId": "com.fboucher.test-report",
    "productName": "TestReport",
    "files": [
      "./build/**/*",
      "./src/electron-starter.js"
    ],
    "dmg": {
      "contents": [
        {
          "x": 120,
          "y": 220
        },
        {
          "x": 400,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "portable",
      "icon": "build/favicon.ico"
    },
    "directories": {
      "buildResources": "assets"
    }
  },
  "homepage": "./",
  "main": "./src/electron-starter.js",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "dev": "nf start -p 3000",
    "electron-build": "npm run build && electron-builder -w",
    "release": "yarn build && electron-builder --publish=always",
    "pack": "yarn build && yarn electron-build"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "electron": "^11.5.0",
    "electron-builder": "^20.38.4",
    "foreman": "^3.0.1",
    "typescript": "^3.3.4000"
  }
}
